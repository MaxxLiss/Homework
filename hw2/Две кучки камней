#include "bits/stdc++.h"

using namespace std;

const int inf = 1e9;

int n = 0, ans = inf, sm = 0;
vector<int> stones;

void f(int loc_sm, int curr) {
    if (sm - loc_sm <= loc_sm) {
        ans = min(ans, abs(sm - 2 * loc_sm));
        return;
    }
    for (int i = curr; i < n; ++i) {
        f(loc_sm + stones[i], i + 1);
    }
}

int main() {
    cin.tie(nullptr); cout.tie(nullptr);
    ios_base::sync_with_stdio(false);

    cin >> n;
    stones = vector<int> (n);
    for (int i = 0; i < n; ++i) {
        cin >> stones[i];
        sm += stones[i];
    }

    f(0, 0);

    cout << ans;

    return 0;
}