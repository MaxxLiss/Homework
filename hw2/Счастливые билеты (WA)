#include "bits/stdc++.h"

using namespace std;

int n = 0, sm = 0;
uint64_t ans = 0;

void f(int len, int curr_sm) {
    if (curr_sm == sm / 2 && len == n) {
        ans++;
        return;
    }
    if (len > n || curr_sm > sm / 2) {
        return;
    }
    for (int i = 0; i <= n; ++ i) {
        f(len + 1, curr_sm + i);
    }
}

int main() {
    cin.tie(nullptr); cout.tie(nullptr);
    ios_base::sync_with_stdio(false);

    cin >> n >> sm;

    f(0, 0);

    cout << ans * ans;

    return 0;
}